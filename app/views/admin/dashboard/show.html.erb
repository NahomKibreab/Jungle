<h1>Admin::Dashboard</h1>
<div class="row">
  <div class="col-sm-6">
    <div class="card">
      <div class="card-body">
        <h1 class="card-title"><%= @total_products %></h1>
        <p class="card-text">Total Products</p>
        <%= link_to "Go Products", '/admin/products', class: 'btn btn-lg btn-primary' %>
      </div>
    </div>
  </div>
  <div class="col-sm-6">
    <div class="card">
      <div class="card-body">
        <h1 class="card-title"><%= @total_categories %></h1>
        <p class="card-text">Total Categories</p>
        <%= link_to "Go Categories", '/categories/' + rand(1..3).to_s, class: 'btn btn-lg btn-primary' %>
      </div>
    </div>
  </div>
</div>

