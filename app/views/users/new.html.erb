<h1>Signup!</h1>

<%= form_for :user, url: '/users', :html => {:class => "col-md-8 offset-md-2"} do |f| %>

  <div class="form-group row">
        <%= f.label :first_name, "First name:", class: "col-md-2 col-form-label" %>
        <div class="col-md-6">
          <%= f.text_field :first_name, class: "form-control" %>
        </div>
  </div>
  <div class="form-group row">
        <%= f.label :last_name, "Last name:", class: "col-md-2 control-label" %>
        <div class="col-md-6">
          <%= f.text_field :last_name, class: "form-control" %>
        </div>
  </div>
  <div class="form-group row">
        <%= f.label :email, "Email:", class: "col-md-2 control-label" %>
        <div class="col-md-6">
          <%= f.email_field :email, class: "form-control" %>
        </div>
  </div>
  <div class="form-group row">
        <%= f.label :password, "Password:", class: "col-md-2 control-label" %>
        <div class="col-md-6">
          <%= f.password_field :password, class: "form-control" %>
        </div>
  </div>
  <div class="form-group row">
        <%= f.label :password_confirmation, "Password Confirmation:", class: "col-md-2 control-label" %>
        <div class="col-md-6">
          <%= f.password_field :password_confirmation, class: "form-control" %>
        </div>
  </div>
  <%= f.submit "Submit", class: "btn btn-default btn-primary" %>

  
  

<% end %>

